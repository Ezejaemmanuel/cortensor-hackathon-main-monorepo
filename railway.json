{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --filter=server --prod=false && pnpm build --filter=server"
  },
  "deploy": {
    "startCommand": "cd apps/server && pnpm start",
    "restartPolicyType": "ON_FAILURE"
  }
}